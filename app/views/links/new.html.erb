<%= render partial: "shared/link_error" %>
<li class="divider"></li>
<div class="row">
<%= form_for @link do |f| %>
<div class="large 6 columns large centered panel radius">
		<%=f.label :title, placeholder: 'Title' %>
		<%= f.text_field :title %>
		<%=f.label :url, placeholder: 'url' %>
		<%= f.url_field :url, placeholder: 'http//' %>
	</div>
	<div class="large-6 columns">
		<%= f.submit "    Share    ", class: 'medium button right' %>
	</div>
</div>
<% end %>
